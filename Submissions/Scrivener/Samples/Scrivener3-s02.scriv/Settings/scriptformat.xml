<?xml version="1.0" encoding="UTF-8"?>
<ScrivenerScriptFormat Version="1.0">
    <Name>BBC Radio Scene Style</Name>
    <Units>Inches</Units>
    <ScriptElements>
        <Element>
            <Title>Scene Heading</Title>
            <KeyEquivalent>s</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>Single</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>3</SpaceBefore>
                <FirstLineIndent>2.5</FirstLineIndent>
                <Indent>2.5</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
            </ParagraphFormat>
            <NextElement>Technical Directions</NextElement>
            <NextElementOnEmptyLineTab>Technical Directions</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Character &amp; Dialogue</NextElementOnTabAfterTyping>
            <AutoCompleteList>
                <AppendProjectAutoCompleteList>Yes</AppendProjectAutoCompleteList>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>Technical Directions</Title>
            <KeyEquivalent>t</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>Single</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>1</SpaceBefore>
                <FirstLineIndent>2.5</FirstLineIndent>
                <Indent>2.5</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Technical Directions</NextElement>
            <NextElementOnEmptyLineTab>Character &amp; Dialogue</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Transition</NextElementOnTabAfterTyping>
            <AutoCompleteList>
                <AppendProjectAutoCompleteList>Yes</AppendProjectAutoCompleteList>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>Character &amp; Dialogue</Title>
            <KeyEquivalent>d</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>None</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
                <StyleDelimiter>(	)</StyleDelimiter>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>2</SpaceBefore>
                <FirstLineIndent>0.0</FirstLineIndent>
                <Indent>2.0</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>2.0</FirstTab>
                <DefaultTabInterval>0.25</DefaultTabInterval>
                <MinTabs>10</MinTabs>
            </ParagraphFormat>
            <NextElement>Character &amp; Dialogue</NextElement>
            <NextElementOnEmptyLineTab>Parenthetical Directions</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Parenthetical Directions</NextElementOnTabAfterTyping>
            <TextToInsertOnTab>(:	)</TextToInsertOnTab>
            <AutoCompleteList>
                <Completions>
                    <Completion NewLineAfter="No">(CONT'D)</Completion>
                    <Completion NewLineAfter="No">(BEAT) </Completion>
                    <Completion NewLineAfter="No">(PAUSE) </Completion>
                    <Completion NewLineAfter="No">(OFF) </Completion>
                    <Completion NewLineAfter="No">(V.O.) </Completion>
                    <Completion NewLineAfter="No">(D) </Completion>
                    <Completion NewLineAfter="No">(LOW) </Completion>
                    <Completion NewLineAfter="No">(CLOSE) </Completion>
                </Completions>
                <AppendProjectAutoCompleteList>Yes</AppendProjectAutoCompleteList>
                <ProjectListAutoCompleteBehavior>InsertTab</ProjectListAutoCompleteBehavior>
                <AutomaticallyAddPhrasesToProjectList>Yes</AutomaticallyAddPhrasesToProjectList>
                <PhraseEndDelimiter>(:)</PhraseEndDelimiter>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>Dialogue</Title>
            <KeyEquivalent>D</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>None</UnderlineStyle>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>2</SpaceBefore>
                <FirstLineIndent>2.0</FirstLineIndent>
                <Indent>2.0</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Character &amp; Dialogue</NextElement>
            <NextElementOnEmptyLineTab>Parenthetical Directions</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Parenthetical Directions</NextElementOnTabAfterTyping>
            <AutoCompleteList>
                <Completions>
                    <Completion NewLineAfter="No">(BEAT) </Completion>
                    <Completion NewLineAfter="No">(PAUSE) </Completion>
                    <Completion NewLineAfter="No">(OFF) </Completion>
                    <Completion NewLineAfter="No">(V.O.) </Completion>
                    <Completion NewLineAfter="No">(D) </Completion>
                    <Completion NewLineAfter="No">(LOW) </Completion>
                    <Completion NewLineAfter="No">(CLOSE) </Completion>
                </Completions>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>Parenthetical Directions</Title>
            <KeyEquivalent>p</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>Single</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>2</SpaceBefore>
                <FirstLineIndent>2.5</FirstLineIndent>
                <Indent>2.5</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Dialogue</NextElement>
            <NextElementOnEmptyLineTab>Transition</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Character &amp; Dialogue</NextElementOnTabAfterTyping>
            <AutoCompleteList>
                <AppendProjectAutoCompleteList>Yes</AppendProjectAutoCompleteList>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>Transition</Title>
            <KeyEquivalent></KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>Single</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Left</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>2</SpaceBefore>
                <FirstLineIndent>2.5</FirstLineIndent>
                <Indent>2.5</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Scene Heading</NextElement>
            <NextElementOnEmptyLineTab>Character &amp; Dialogue</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Scene Heading</NextElementOnTabAfterTyping>
            <AutoCompleteList></AutoCompleteList>
        </Element>
        <Element>
            <Title>Page Turns</Title>
            <KeyEquivalent>f</KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>None</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Parenthetical>Yes</Parenthetical>
                <Alignment>Right</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>1</SpaceBefore>
                <FirstLineIndent>0.0</FirstLineIndent>
                <Indent>0.0</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Character &amp; Dialogue</NextElement>
            <NextElementOnEmptyLineTab>Scene Heading</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Character &amp; Dialogue</NextElementOnTabAfterTyping>
            <AutoCompleteList>
                <AppendProjectAutoCompleteList>Yes</AppendProjectAutoCompleteList>
            </AutoCompleteList>
        </Element>
        <Element>
            <Title>End</Title>
            <KeyEquivalent></KeyEquivalent>
            <CharacterFormat>
                <Font Size="12.0">ArialMT</Font>
                <UnderlineStyle>Single</UnderlineStyle>
                <AllCaps>Yes</AllCaps>
            </CharacterFormat>
            <ParagraphFormat>
                <Alignment>Center</Alignment>
                <Spacing>1.5</Spacing>
                <SpaceBefore>2</SpaceBefore>
                <FirstLineIndent>0.0</FirstLineIndent>
                <Indent>0.0</Indent>
                <TailIndent>0.0</TailIndent>
                <FirstTab>0.0</FirstTab>
                <WritingDirection>LeftToRight</WritingDirection>
            </ParagraphFormat>
            <NextElement>Scene Heading</NextElement>
            <NextElementOnEmptyLineTab>Scene Heading</NextElementOnEmptyLineTab>
            <NextElementOnTabAfterTyping>Scene Heading</NextElementOnTabAfterTyping>
            <AutoCompleteList></AutoCompleteList>
        </Element>
    </ScriptElements>
</ScrivenerScriptFormat>